<%- include("../../partials/header.ejs") %>

<body>
    <%- include("../../partials/navbar.ejs") %> 

    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Edição de artigo</h2>
            </div>
            
            <div class="card-body">
                <form action="/articles/update" method="post">
                    <input type="hidden" name="id" value="<%= article.id %> ">

                    <input type="text" name="title" class="form-control" placeholder="Defina o título da categoria" value="<%= article.title %> "><br>

                    <textarea id="article" class="form-control" name="body" 
                    placeholder="Escreva o artigo aqui!" cols="30" rows="10"><%- article.body %></textarea><br>

                    <label>Categoria</label>
                    <select name="idCategory" class="form-control">
                        <% categories.forEach(category => { %>

                            <option value="<%= category.id %>" <%= article.tblCategoriumId == category.id?"selected":"" %>><%= category.title %> </option>

                        <% }) %>
                    </select><br>

                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
            
        </div>
        
    </div>
</body>

<%- include("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    
    tinymce.init({
        language: "pt_BR",
        selector: "#article",
        plugins: [
            'addlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });

</script>