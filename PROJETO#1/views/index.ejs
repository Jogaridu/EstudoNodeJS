<%- include("partials/header.ejs") %> 

<body>
    <%- include("partials/navbar.ejs") %> 

    <div class="container">

        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-success">Perguntar</a>
        <hr>
        
        <% perguntas.forEach(perguntas => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= perguntas.titulo %> </h3>
                </div>
                <a href="/pergunta/<%= perguntas.id %>">
                    <div class="card-footer">
                        <button class="btn btn-success">Responder</button>
                    </div>
                </a>
            </div>
        <% }) %>

    </div>

</body>

